generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type{
  VIDEO
  LINK 
  TWEET
  DOCUMENT
}

model User{
  id          String      @id @default(uuid())
  firstname   String
  lastname    String
  username    String   @unique
  email       String
  password    String
  contents    Content[]
  links       Link[]
}

model Tag{
  id         String      @id @default(uuid())
  title      String  
  contents   Content[]
}

model Content{
  id          String    @id @default(uuid())
  title       String
  link        String
  type        Type 
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String    
  tags        Tag[]     
  createdAt   DateTime
}

model Link{
  id       String      @id @default(uuid())
  hash     String      @unique
  userId   String  
  user     User        @relation(fields: [userId],references: [id])
      
}

